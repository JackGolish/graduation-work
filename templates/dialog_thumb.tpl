<tr style = "{STYLE}">
    <td style = "width: 67px; padding: 5px 10px 5px 5px;  border-left: 1px solid #DAE1E8">
    </td>
    <td style = "width: 32px; padding: 5px 10px 5px 5px;">
        <div style = "width: 32px; height: 32px; overflow: hidden;">
            <a href = "{SENDER_ID}">
                <img src = "{SENDER_PHOTO}" style = "width: 32px">
            </a>
        </div>
    </td>
    <td style = "width: 356px; vertical-align: top; padding: 5px;">
        <div style = "color: #777; font-size: 11px;">
            <a href = "{SENDER_ID}" style = "font-weight: bold;">
                {SENDER_NAME}
            </a>
            <div style = "word-wrap: break-word;">
                {MESSAGE}
            </div>
        </div>
    </td>
    <td style = "vertical-align: top; padding: 5px">
        <div style = "color: #999; font-size: 11px; margin-left: 10px;">
            {DATE}
        </div>
    </td>
    <td style = "width: 59px; padding: 5px; border-right: 1px solid #DAE1E8">
    </td>
</tr>