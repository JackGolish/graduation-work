<td style = "vertical-align: top; padding-top: 10px;">
    <div style = "float: left; width: 140px; font-size: 12px; line-height: 140%; padding: 0 0 0 5px">
        <ol style = "list-style: none; padding: 0">
            <li>{MY_PAGE}</li>
            <li>{MY_FRIENDS}</li>
            <li>{MY_MESSAGES}</li>
            <li>{MY_DOCUMENTS}</li>
        </ol>
    </div>
    <div style = "float: right">
        <div style = "float: left; width: 200px;">
            <img src = "{MAIN_PHOTO}" alt = "Главная фотография" style = "width: 200px" />
            <div style = "text-align: center; margin-top: 10px;">
                {ACTION}
            </div>
        </div>
        <div style = "float: right; width: 397px; padding-left: 25px;">
            <div>
                <h4 style = "margin: 0 0 10px 0; font-size: 1.09em; color: #666666;">
                    {USER}
					<span style = "float: right; color: {ONLINE_STYLE}">{ONLINE}</span>
                </h4>
                <div style = "border-top: 1px solid #666666; padding: 10px 0 15px; font-size: 11px; line-height: 140%">
                    <div>
                        <span style = "width: 135px">День рождения:</span>
                        <span>{BIRTHDAY}</span>
                    </div>
                    <div>
                        <span style = "width: 135px">Город:</span>
                        <span>{CITY}</span>
                    </div>
                    <div>
                        <span style = "width: 135px">Адрес:</span>
                        <span>{ADDRESS}</span>
                    </div>
                    <div>
                        <span style = "width: 135px">Телефон:</span>
                        <span>{PHONE}</span>
                    </div>
                </div>
            </div>
            <div style = "border-top: 1px solid #666; padding: 10px 0">
            </div>
        </div>
    </div>
</td>